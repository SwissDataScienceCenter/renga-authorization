# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# GraphDomain controller
GET     /management/graph_domain                      controllers.GraphDomainController.index

GET     /management/graph_domain/$idOrName<[^/]*>     controllers.GraphDomainController.findByIdOrName(idOrName: String)

POST    /management/graph_domain                      controllers.GraphDomainController.create


# PropertyKeys controller
GET     /management/property_key                       controllers.PropertyKeyController.index

GET     /management/property_key/:id                   controllers.PropertyKeyController.findById(id: String)

GET     /management/property_key/$namespace<[^/]*>/:name     controllers.PropertyKeyController.findByNamespaceAndName(namespace: String, name: String)

POST    /management/property_key                      controllers.PropertyKeyController.create
